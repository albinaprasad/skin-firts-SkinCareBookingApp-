<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.passwordManagerScreen.PasswordManagerActivity">
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_semibold"
        android:gravity="center"
        android:text="@string/password_manager"
        android:textColor="@color/button_blue"

        android:autoSizeMinTextSize="19dp"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeStepGranularity="0.5dp"
        android:autoSizeTextType="uniform"
        android:textStyle="bold"
        android:includeFontPadding="false"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintDimensionRatio="226:23"
        app:layout_constraintWidth_percent="0.62"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.089"
      />


    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:src="@drawable/back_icon"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="14:14"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.102"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.099"
        app:layout_constraintWidth_percent="0.038" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_medium"
        android:text="@string/current_password"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="16dp"
        app:autoSizeMaxTextSize="20dp"
        app:layout_constraintDimensionRatio="178:23"
        app:layout_constraintWidth_percent="0.494"

        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.1902"
        app:layout_constraintVertical_bias="0.174"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="299:45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"

        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.225"
        app:layout_constraintWidth_percent="0.830">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_round_edges"
            android:fontFamily="@font/leaguespartan_medium"
            android:hint="@string/asteric"
            android:includeFontPadding="false"
            android:textColorHint="@color/button_blue"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            app:passwordToggleEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/txtforgotpassword"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_medium"
        android:gravity="end"
        android:text="@string/forgotPassword"
        android:textColor="@color/button_blue"

        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="14dp"
        app:autoSizeMaxTextSize="18dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="116:23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.865"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.29"
        app:layout_constraintWidth_percent="0.32">

    </TextView>


    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_medium"
        android:text="@string/new_password"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="16dp"
        app:autoSizeMaxTextSize="20dp"
        app:layout_constraintDimensionRatio="178:23"
        app:layout_constraintWidth_percent="0.494"

        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.1902"
        app:layout_constraintVertical_bias="0.344"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="299:45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"

        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.395"
        app:layout_constraintWidth_percent="0.830">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_round_edges"
            android:fontFamily="@font/leaguespartan_medium"
            android:hint="@string/asteric"
            android:textColorHint="@color/button_blue"
            android:inputType="textPassword"
            android:includeFontPadding="false"
            android:paddingStart="12dp"
            app:passwordToggleEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_medium"
        android:text="@string/confirm_new_password"
        app:autoSizeTextType="uniform"
        app:autoSizeMinTextSize="16dp"
        app:autoSizeMaxTextSize="20dp"
        app:layout_constraintDimensionRatio="178:23"
        app:layout_constraintWidth_percent="0.494"

        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.1902"
        app:layout_constraintVertical_bias="0.474"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="299:45"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"

        app:passwordToggleEnabled="true"
        app:hintEnabled="false"
        app:hintAnimationEnabled="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.527"
        app:layout_constraintWidth_percent="0.830">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_round_edges"
            android:fontFamily="@font/leaguespartan_medium"
            android:hint="@string/asteric"
            android:textColorHint="@color/button_blue"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            app:passwordToggleEnabled="true" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/backgroundColor"
        android:text="@string/change_password"
        android:fontFamily="@font/leaguespartan_regular"
        android:includeFontPadding="false"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeStepGranularity="0.5dp"
        android:autoSizeTextType="uniform"

        app:layout_constraintDimensionRatio="300:48"
        app:layout_constraintWidth_percent="0.833"

        app:layout_constraintTop_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.896"

        >

    </Button>
</androidx.constraintlayout.widget.ConstraintLayout>