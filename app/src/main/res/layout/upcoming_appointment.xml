<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.17625"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="17dp"
        app:layout_constraintWidth_percent="0.833" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/off_blue">

            <ImageView
                android:id="@+id/ivDoctorPic"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/doctor_image_one"
                android:layout_marginTop="17dp"
                android:layout_marginStart="23dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17672"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.472"
                app:layout_constraintDimensionRatio="170:20"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:text="@string/dr_olivia_turner_m_d"
                android:layout_marginStart="15dp"
                android:layout_marginTop="37dp"
                android:textColor="@color/button_blue"
                android:fontFamily="@font/leaguespartan_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDoctorPic"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="37dp" />

            <TextView
                android:id="@+id/tvSpecialization"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="148:18"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toEndOf="@+id/ivDoctorPic"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintWidth_percent="0.411"
                android:text="@string/dermato_Endocrinology"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDateOfAppointment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="21dp"
                app:cardCornerRadius="13dp"
                app:layout_constraintDimensionRatio="112:18"
                app:layout_constraintWidth_percent="0.311"

                app:layout_constraintTop_toBottomOf="@id/tvSpecialization"
                app:layout_constraintStart_toStartOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="9dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/calender_icon_blue" />

                    <TextView
                        android:id="@+id/tvDateOfAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/leaguespartan_medium"
                        android:gravity="center_horizontal"
                        android:text="Sunday, 12 June"
                        android:textColor="@color/button_blue"
                        android:textSize="11dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvTimeOfAppointment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="7dp"
                android:layout_marginTop="21dp"
                app:cardCornerRadius="13dp"
                app:layout_constraintDimensionRatio="143:18"
                app:layout_constraintStart_toEndOf="@+id/cvDateOfAppointment"

                app:layout_constraintTop_toBottomOf="@id/tvSpecialization"
                app:layout_constraintWidth_percent="0.3972">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/clock" />

                    <TextView
                        android:id="@+id/tvTimeOfAppointment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:fontFamily="@font/leaguespartan_medium"
                        android:gravity="center_vertical"
                        android:text="9:00AM - 5:00PM"
                        android:textColor="@color/button_blue"
                        android:textSize="11dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvDetails"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="9dp"
                app:cardBackgroundColor="@color/button_blue"
                app:cardCornerRadius="18dp"
                app:layout_constraintDimensionRatio="174:25"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cvDateOfAppointment"
                app:layout_constraintWidth_percent="0.4833">

                <TextView
                    android:id="@+id/tvDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="25dp"
                    android:autoSizeMinTextSize="15dp"
                    android:autoSizeTextType="uniform"
                    android:fontFamily="@font/leaguespartan_regular"
                    android:gravity="center"
                    android:text="@string/details"
                    android:textColor="@color/white" />
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/btnTick"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/tick_icon"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.0728"
                android:layout_marginTop="9dp"
                android:layout_marginStart="12dp"
                app:layout_constraintTop_toBottomOf="@id/cvTimeOfAppointment"
                app:layout_constraintStart_toEndOf="@+id/cvDetails"
                tools:layout_editor_absoluteX="201dp"
                tools:layout_editor_absoluteY="118dp" />

            <ImageView
                android:id="@+id/btnCross"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/cross_icon"
                android:layout_marginStart="10dp"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@id/cvTimeOfAppointment"
                app:layout_constraintStart_toEndOf="@id/btnTick"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.0728"
                tools:layout_editor_absoluteX="239dp"
                tools:layout_editor_absoluteY="121dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>