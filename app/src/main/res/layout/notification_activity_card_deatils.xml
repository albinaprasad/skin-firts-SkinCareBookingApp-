<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/off_blue"
        
        app:layout_constraintDimensionRatio="300:96"
        app:layout_constraintWidth_percent="1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    </androidx.cardview.widget.CardView>

    <ImageButton
        android:id="@+id/notificationImage"
        android:backgroundTint="@color/button_blue"
        android:background="@drawable/round_button_doctor_white"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:elevation="4dp"
        android:padding="13dp"
        android:scaleType="fitXY"
        android:src="@drawable/calender_icon_thin_borders"

        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintStart_toStartOf="@id/cardBackground"
        app:layout_constraintEnd_toEndOf="@+id/cardBackground"
        app:layout_constraintTop_toTopOf="@id/cardBackground"

        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintWidth_percent="0.14"
        />
    <TextView
        android:id="@+id/scheduleTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginStart="2dp"
        android:text="@string/scheduled_change"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="14dp"
        android:autoSizeMaxTextSize="22dp"
        android:autoSizeStepGranularity="0.5dp"

        android:textColor="@color/text_black"
        android:fontFamily="@font/leaguespartan_medium"
        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintDimensionRatio="206:21"

        app:layout_constraintWidth_percent="0.59"
        app:layout_constraintVertical_bias="0.34"

        app:layout_constraintStart_toStartOf="@id/notificationImage"
        app:layout_constraintEnd_toEndOf="@+id/cardBackground"
        app:layout_constraintTop_toTopOf="@id/cardBackground"
        >

    </TextView>
    <TextView
        android:id="@+id/dicscriptionTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="6dp"
        android:text="@string/lorem_ipsum"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeStepGranularity="0.5dp"

        android:textColor="@color/text_black"
        android:fontFamily="@font/leaguespartan_extralight"


        app:layout_constraintDimensionRatio="218:41"

        app:layout_constraintWidth_percent="0.605"

        app:layout_constraintStart_toStartOf="@id/notificationImage"
        app:layout_constraintEnd_toEndOf="@+id/cardBackground"
        app:layout_constraintTop_toBottomOf="@id/scheduleTV"
        >

    </TextView>
    <TextView
        android:id="@+id/timeTV"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:layout_marginStart="10dp"
        android:text="@string/two_hour"

        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeMaxTextSize="16dp"
        android:autoSizeStepGranularity="0.5dp"

        android:textColor="@color/text_black"
        android:fontFamily="@font/league_spartan_light"
        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintDimensionRatio="30:14"

        app:layout_constraintWidth_percent="0.08"
        app:layout_constraintVertical_bias="0.34"

        app:layout_constraintStart_toEndOf="@id/scheduleTV"
        app:layout_constraintEnd_toEndOf="@+id/cardBackground"
        app:layout_constraintTop_toTopOf="@id/cardBackground"
        >

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>