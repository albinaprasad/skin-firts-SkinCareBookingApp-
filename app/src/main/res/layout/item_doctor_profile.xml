<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/doctorProfileCardView"
    android:layout_width="match_parent"
    android:layout_height="74dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/off_blue"
    app:cardCornerRadius="17dp"
    android:layout_marginBottom="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doctorProfileConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/doctorProfilePicture"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:src="@drawable/doctor_image_one"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.050"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.50" />

        <androidx.cardview.widget.CardView
            android:id="@+id/doctorDetailsCardView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="13dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.50"
            app:layout_constraintHorizontal_bias="0.5650"
            app:layout_constraintStart_toEndOf="@id/doctorProfilePicture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.70">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctorNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/leaguespartan_medium"
                    android:textColor="@color/button_blue"
                    android:textSize="14dp"
                    tools:text="Dr. Olivia Turner, M.D." />

                <TextView
                    android:id="@+id/doctorSpecializationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/league_spartan_light"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    tools:text="Dermato-Endocrinology" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/ratingCardView"
            android:layout_width="43dp"
            android:layout_height="18dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="13dp"
            app:layout_constraintStart_toStartOf="@id/doctorDetailsCardView"
            app:layout_constraintTop_toBottomOf="@+id/doctorDetailsCardView"
            app:layout_constraintBottom_toBottomOf="@id/doctorProfileConstraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="3dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/star_empty"/>

                <TextView
                    android:id="@+id/ratingTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="5"
                    android:textSize="12dp"
                    android:fontFamily="@font/league_spartan_light"
                    android:layout_marginStart="3dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/commentCardView"
            android:layout_width="43dp"
            android:layout_height="18dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="13dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/ratingCardView"
            app:layout_constraintTop_toBottomOf="@+id/doctorDetailsCardView"
            app:layout_constraintBottom_toBottomOf="@id/doctorProfileConstraint">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginStart="3dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@drawable/comment_blue"/>

                <TextView
                    android:id="@+id/commentCountTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="60"
                    android:textSize="12dp"
                    android:fontFamily="@font/league_spartan_light"
                    android:layout_marginStart="3dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/helpImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/help_image"
            app:layout_constraintEnd_toStartOf="@+id/favoriteLayout"
            app:layout_constraintTop_toBottomOf="@id/doctorDetailsCardView"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <LinearLayout
            android:id="@+id/favoriteLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_circle_bg"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/doctorDetailsCardView"
            app:layout_constraintTop_toBottomOf="@id/doctorDetailsCardView">

            <ImageView
                android:id="@+id/favoriteImageView"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/favorite_image" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>