<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.doctorScreen.DoctorsActivity">

    <!-- Header Title -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/leaguespartan_semibold"
        android:text="@string/doctors"
        android:textColor="@color/button_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"

        app:layout_constraintDimensionRatio="87:17"
        app:layout_constraintWidth_percent="0.356"

        app:layout_constraintVertical_bias="0.089"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:background="@color/white"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/back_icon"

        app:layout_constraintDimensionRatio="14:14"
        app:layout_constraintWidth_percent="0.038"

        app:layout_constraintVertical_bias="0.099"
        app:layout_constraintHorizontal_bias="0.102"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Search Button -->
    <ImageButton
        android:id="@+id/searchButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/search_icon"
        android:background="@drawable/round_button_offblue"

        app:layout_constraintDimensionRatio="22:22"
        app:layout_constraintWidth_percent="0.074"

        app:layout_constraintVertical_bias="0.094"
        app:layout_constraintHorizontal_bias="0.8"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Button -->
    <ImageButton
        android:id="@+id/settingsButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/settings_icon"
        android:background="@drawable/round_button_offblue"

        app:layout_constraintDimensionRatio="22:22"
        app:layout_constraintWidth_percent="0.074"

        app:layout_constraintVertical_bias="0.094"
        app:layout_constraintHorizontal_bias="0.90"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sort By Text -->
    <TextView
        android:id="@+id/sortByText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/sort_by"
        android:textSize="12sp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/league_spartan_light"

        app:layout_constraintDimensionRatio="38:14"
        app:layout_constraintWidth_percent="0.105"

        app:layout_constraintVertical_bias="0.146"
        app:layout_constraintHorizontal_bias="0.12"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Sort Button -->
    <Button
        android:id="@+id/sortButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/button_blue"
        android:text="Aâ†’Z"
        android:textColor="@color/white"
        android:textSize="8sp"
        android:textAllCaps="false"
        android:padding="1dp"

        app:layout_constraintDimensionRatio="34:25"
        app:layout_constraintWidth_percent="0.10"
        app:layout_constraintVertical_bias="0.142"
        app:layout_constraintHorizontal_bias="0.2460"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Filter Buttons -->
    <LinearLayout
        android:id="@+id/filterButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="4"

        app:layout_constraintDimensionRatio="101:18"
        app:layout_constraintWidth_percent="0.280"
        app:layout_constraintVertical_bias="0.146"
        app:layout_constraintHorizontal_bias="0.470"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_offblue"
            android:src="@drawable/star_icon"
            android:padding="8dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_button_offblue"
            android:src="@drawable/fav_icon"
            android:padding="8dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_offblue"
            android:src="@drawable/female_icon"
            android:padding="6dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:background="@drawable/round_button_offblue"
            android:src="@drawable/male_icon"
            android:padding="8dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/doctorsRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:listitem="@layout/doctors_list_cardview"
        android:layout_marginTop="16dp"

        app:layout_constraintTop_toBottomOf="@id/filterButtons"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>