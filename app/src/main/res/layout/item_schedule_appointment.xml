<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_schedule_appointment_layout"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginBottom="6dp">

    <TextView
        android:id="@+id/startTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/league_spartan_light"
        android:text="10:30 AM"
        android:textColor="@color/button_blue"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeMaxTextSize="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/doctorAvailableConstraintLayout"
        />

    <TextView
        android:id="@+id/endTimeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:autoSizeMaxTextSize="12dp"
        android:autoSizeMinTextSize="8dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/league_spartan_light"
        android:includeFontPadding="false"
        android:text="11:30 PM"
        android:textColor="@color/button_blue"
        app:layout_constraintBottom_toBottomOf="@id/doctorAvailableConstraintLayout"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/doctorAvailableConstraintLayout"
        android:layout_width="202dp"
        android:layout_height="51dp"
        android:layout_marginStart="3dp"
        android:background="@drawable/rounded_blue_bg"
        app:layout_constraintStart_toEndOf="@+id/startTimeTextView"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/doctorNameTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autoSizeMaxTextSize="12dp"
            android:autoSizeMinTextSize="8dp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/leaguespartan_semibold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Dr. Alexander Bennett, Ph.D."
            android:textColor="@color/button_blue"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/statusIcons"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.6066" />

        <TextView
            android:id="@+id/treatmentTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="10dp"
            android:autoSizeMinTextSize="6dp"
            android:autoSizeTextType="uniform"
            android:ellipsize="end"
            android:fontFamily="@font/league_spartan_light"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="Treatment and prevention of \nskin and photodermatitis."
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.26"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctorNameTextView"
            app:layout_constraintWidth_percent="0.7192" />

        <LinearLayout
            android:id="@+id/statusIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/tick_image" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginStart="2dp"
                android:src="@drawable/cross_image" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>