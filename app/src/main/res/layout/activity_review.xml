<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.reviewScreen.ReviewActivity">

    <ImageButton
        android:id="@+id/reviewBackBtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button"
        app:layout_constraintBottom_toBottomOf="@+id/reviewTextView"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reviewTextView"
        app:layout_constraintWidth_percent="0.038" />

    <TextView
        android:id="@+id/reviewTextView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="?attr/actionBarSize"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="18dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/leaguespartan_medium"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="@string/review"
        android:textColor="@color/button_blue"
        app:layout_constraintDimensionRatio="142: 30"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3944" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/reviewTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/reviewBottomNavigation">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/reviewText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:autoSizeMaxTextSize="14dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/league_spartan"
                android:includeFontPadding="false"
                android:text="@string/lorem_ipsum"
                android:textColor="@color/black"
                app:layout_constraintDimensionRatio="285: 50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7916" />

            <ImageView
                android:id="@+id/reviewDoctorImage"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/review_doctor_image"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewText"
                app:layout_constraintWidth_percent="0.3861" />

            <TextView
                android:id="@+id/reviewDoctorNameText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="24dp"
                android:autoSizeMaxTextSize="24dp"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/leaguespartan_semibold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/dr_olivia_turner_m_d"
                android:textColor="@color/button_blue"
                app:layout_constraintDimensionRatio="289:26"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewDoctorImage"
                app:layout_constraintWidth_percent="0.8027" />

            <TextView
                android:id="@+id/reviewDoctorSpecializationText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:autoSizeMaxTextSize="15dp"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeTextType="uniform"
                android:fontFamily="@font/league_spartan"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/dermato_endocrinology"
                app:layout_constraintDimensionRatio="251: 12"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/reviewDoctorNameText"
                app:layout_constraintWidth_percent="0.6972" />


            <LinearLayout
                android:id="@+id/favoriteLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/round_corner_23px_offblue"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/fiveStarRatingLayout"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toStartOf="@id/fiveStarRatingLayout"
                app:layout_constraintTop_toTopOf="@id/fiveStarRatingLayout"
                app:layout_constraintWidth_percent="0.0577">

                <ImageView
                    android:id="@+id/favoriteImageView"
                    android:layout_width="11dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/fav_icon_filled_darkblue" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fiveStarRatingLayout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_rating_bg_23dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal"
                android:weightSum="5"
                app:layout_constraintDimensionRatio="123:23"
                app:layout_constraintTop_toBottomOf="@id/reviewDoctorSpecializationText"
                app:layout_constraintWidth_percent="0.3416">

                <ImageView
                    android:id="@+id/starOne"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/starTwo"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/starThree"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/starFour"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/star_icon" />

                <ImageView
                    android:id="@+id/starFive"
                    android:layout_width="12dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/star_icon" />
            </LinearLayout>

            <EditText

                android:id="@+id/descriptionEditText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="16dp"
                android:autoSizeMaxTextSize="10dp"
                android:autoSizeMinTextSize="8dp"
                android:autoSizeStepGranularity="0.5dp"
                android:autoSizeTextType="uniform"
                android:background="@drawable/light_blue_rounded_bg_13dp"
                android:fontFamily="@font/league_spartan_light"
                android:gravity="start"
                android:hint="@string/enter_your_problem_here"
                android:includeFontPadding="false"
                android:padding="14dp"
                android:textColorHint="@color/button_blue"
                app:layout_constraintDimensionRatio="300:151"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/fiveStarRatingLayout"
                app:layout_constraintWidth_percent="0.8333"
                app:layout_goneMarginTop="3dp">
            </EditText>

            <Button
                android:id="@+id/login"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="66dp"
                android:backgroundTint="@color/button_blue"
                android:fontFamily="@font/league_spartan"
                android:includeFontPadding="false"
                android:text="@string/add_review"
                app:autoSizeMaxTextSize="24dp"
                app:autoSizeMinTextSize="15dp"
                app:autoSizeTextType="uniform"
                app:layout_constraintDimensionRatio="256:48"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/descriptionEditText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.7111">

            </Button>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/reviewBottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.090"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/review_bottom_navigation_bar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.62"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.8250"
            layout="@layout/bottom_navigation_layout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>