<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.PrivacyPolicyActivity">


    <ImageView
        android:id="@+id/backbtnPrivacyPolicy"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="30dp"

        app:layout_constraintBottom_toBottomOf="@+id/tvPrivacyPolicy"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHeight_percent="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPrivacyPolicy"
        app:srcCompat="@drawable/back_icon" />

    <TextView
        android:id="@+id/tvPrivacyPolicy"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="97dp"
        android:layout_marginEnd="96dp"
        android:layout_marginTop="63dp"
        android:fontFamily="@font/leaguespartan_semibold"
        android:text="@string/privacy_policy"
        android:gravity="center_horizontal"
        android:textColor="@color/button_blue"
        android:includeFontPadding="false"
        android:autoSizeTextType="uniform"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="15dp"
        app:layout_constraintDimensionRatio="167:14"
        app:layout_constraintWidth_percent="0.5566"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <WebView
        android:id="@+id/privacyPolicyWebView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvPrivacyPolicy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
