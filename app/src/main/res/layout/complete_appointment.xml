<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="25dp"
    android:layout_width="match_parent"
    android:layout_height="150dp">


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.17625"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="17dp"
        app:layout_constraintWidth_percent="0.833" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/off_blue">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/doctor_image_one"
                android:layout_marginTop="17dp"
                android:layout_marginStart="23dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17672"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:id="@+id/tvDoctorName"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.472"
                app:layout_constraintDimensionRatio="170:20"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:text="@string/dr_olivia_turner_m_d"
                android:layout_marginStart="15dp"
                android:layout_marginTop="37dp"
                android:textColor="@color/button_blue"
                android:fontFamily="@font/leaguespartan_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/imageView2"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="37dp" />

            <TextView
                android:id="@+id/tvSpecialization"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="148:18"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorName"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintWidth_percent="0.411"
                android:text="@string/dermato_Endocrinology"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="50dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardRating"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.116"
                app:layout_constraintDimensionRatio="42:18"
                app:cardCornerRadius="13dp"
                android:layout_marginStart="101dp"
                app:layout_constraintTop_toBottomOf="@id/tvSpecialization"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="85dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_horizontal"
                        android:scaleType="centerInside"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/star_empty" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center"
                        android:textAlignment="textStart"
                        android:text="5"
                        android:fontFamily="@font/leaguespartan_regular"
                        android:textColor="@color/button_blue"
                        android:textSize="12dp"
                        tools:ignore="RtlCompat" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <ImageButton
                android:id="@+id/cardFavourite"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.0527"
                android:src="@drawable/fav_icon"
                android:background="@drawable/circle_bg_image"
                app:layout_constraintTop_toBottomOf="@id/tvSpecialization"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toEndOf="@id/cardRating"
                android:layout_marginStart="7dp"
                tools:layout_editor_absoluteX="151dp"
                tools:layout_editor_absoluteY="73dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="9dp"
                app:cardCornerRadius="18dp"
                app:layout_constraintDimensionRatio="116:27"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardRating"
                app:layout_constraintWidth_percent="0.322" >

                <TextView
                    android:id="@+id/textView5"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/leaguespartan_regular"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="25dp"
                    android:autoSizeMinTextSize="15dp"
                    android:textColor="@color/button_blue"
                    android:text="@string/re_Book" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="18dp"
                app:cardBackgroundColor="@color/button_blue"
                app:layout_constraintDimensionRatio="124:27"
                app:layout_constraintStart_toEndOf="@id/cardRating"
                app:layout_constraintTop_toBottomOf="@id/cardFavourite"
                app:layout_constraintWidth_percent="0.344" >

                <TextView
                    android:id="@+id/tvAddReview"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/leaguespartan_regular"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="25dp"
                    android:autoSizeMinTextSize="15dp"
                    android:textColor="@color/white"
                    android:text="@string/add_Review" />
            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>