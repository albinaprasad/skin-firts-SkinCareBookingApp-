                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="33dp">

                <RadioButton
                    android:id="@+id/option_four"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@null"
                    android:padding="8dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_others"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/others"
                app:layout_constraintDimensionRatio="180:20"
                app:layout_constraintWidth_percent="0.5"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="11dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="16dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintStart_toEndOf="@+id/rgBackgroundOthers"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="31dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/subtitle_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lorem_ipsum"
        android:includeFontPadding="false"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeMaxTextSize="14dp"
        android:textColor="@color/lavender"
        android:fontFamily="@font/leaguespartan_regular"
        app:layout_constraintDimensionRatio="285:50"
        app:layout_constraintWidth_percent="0.791"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/cvSelectorbarOthers"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="119dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/subtitle_two"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="18dp"
        app:cardBackgroundColor="@color/blue_white"
        app:layout_constraintDimensionRatio="300:166"
        app:layout_constraintWidth_percent="0.833"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="464dp" >


        <EditText
            android:id="@+id/editTextText2"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            android:ems="10"
            android:textSize="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="13dp"
            android:textColorHint="@color/light_blue"
            android:gravity="top|start"
            android:inputType="text"
            android:hint="Enter Your Reason Here..." />
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>