        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="63dp"
        android:includeFontPadding="false"
        android:autoSizeMaxTextSize="24dp"
        android:autoSizeMinTextSize="18dp"
        android:autoSizeTextType="uniform"
        android:fontFamily="@font/leaguespartan_semibold"
        android:gravity="center"
        android:text="@string/cancel_appointment"
        android:textColor="@color/button_blue"
        app:layout_constraintDimensionRatio="238:25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.661" />

    <ImageView
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintDimensionRatio="14:14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        app:layout_constraintWidth_percent="0.0388"
        app:srcCompat="@drawable/back_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/lorem_ipsum"
        android:includeFontPadding="false"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="12dp"
        android:autoSizeMaxTextSize="14dp"
        android:fontFamily="@font/leaguespartan_regular"
        app:layout_constraintDimensionRatio="285:50"
        app:layout_constraintWidth_percent="0.791"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="119dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectorbar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="300:33"
        app:layout_constraintWidth_percent="0.83"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/off_blue"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="209dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RadioGroup
                android:id="@+id/rgBackground"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ellipse_icon"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="33dp">

                <RadioButton
                    android:id="@+id/option_one"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@null"
                    android:padding="8dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/rescheduling"
                app:layout_constraintDimensionRatio="180:20"
                app:layout_constraintWidth_percent="0.5"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="11dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="16dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintStart_toEndOf="@+id/rgBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="31dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectorbarWeather"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="300:33"
        app:layout_constraintWidth_percent="0.83"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/cvSelectorbar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/off_blue"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="209dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RadioGroup
                android:id="@+id/rgBackgroundWeather"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ellipse_icon"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="33dp">

                <RadioButton
                    android:id="@+id/option_weather"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@null"
                    android:padding="8dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvWeather"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/weather_conditions"
                app:layout_constraintDimensionRatio="180:20"
                app:layout_constraintWidth_percent="0.5"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="11dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="16dp"
                android:fontFamily="@font/leaguespartan_regular"
