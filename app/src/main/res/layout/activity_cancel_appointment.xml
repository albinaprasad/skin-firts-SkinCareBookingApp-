                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="31dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectorbarUnexpected"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="300:33"
        app:layout_constraintWidth_percent="0.83"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/cvSelectorbarWeather"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/off_blue"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="209dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RadioGroup
                android:id="@+id/rgBackgroundUnexpected"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ellipse_icon"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="33dp">

                <RadioButton
                    android:id="@+id/option_three"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/radio_button_selector"
                    android:button="@null"
                    android:padding="8dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tv_Unexpected"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/unexpected_work"
                app:layout_constraintDimensionRatio="180:20"
                app:layout_constraintWidth_percent="0.5"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:layout_marginTop="11dp"
                android:layout_marginStart="9dp"
                android:layout_marginBottom="11dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:autoSizeMinTextSize="12dp"
                android:autoSizeMaxTextSize="16dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintStart_toEndOf="@+id/rgBackgroundUnexpected"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_editor_absoluteX="31dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSelectorbarOthers"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="300:33"
        app:layout_constraintWidth_percent="0.83"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/cvSelectorbarUnexpected"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:cardBackgroundColor="@color/off_blue"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="209dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <RadioGroup
                android:id="@+id/rgBackgroundOthers"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ellipse_icon"
