<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@color/off_blue"
        android:elevation="1dp"
        app:cardCornerRadius="17dp"

        app:layout_constraintDimensionRatio="300:131"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.9" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/doctorImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="14dp"
        android:elevation="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/doctor_img"

        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintDimensionRatio="1:1"

        app:layout_constraintStart_toStartOf="@id/cardBackground"
        app:layout_constraintTop_toTopOf="@id/cardBackground"
        app:layout_constraintWidth_percent="0.27"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle" />


    <TextView

        android:id="@+id/doctorName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:ellipsize="end"
        android:fontFamily="@font/leaguespartan_medium"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:text="@string/doctorname_sample"

        android:textColor="@color/button_blue"

        android:autoSizeMinTextSize="10dp"
        android:autoSizeMaxTextSize="20dp"
        android:autoSizeStepGranularity="0.5dp"
        android:autoSizeTextType="uniform"
        app:layout_constraintDimensionRatio="100:24"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        app:layout_constraintStart_toEndOf="@id/doctorImage"
        app:layout_constraintTop_toTopOf="@id/doctorImage"
        app:layout_constraintWidth_percent="0.49" />


    <TextView
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="16dp"
        android:autoSizeMaxTextSize="18dp"
        android:autoSizeStepGranularity="0.5dp"

        android:id="@+id/specification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:elevation="4dp"
        android:fontFamily="@font/league_spartan_light"
        android:gravity="center_vertical"
        android:text="@string/doctor_sample_specification"

        android:textColor="@color/text_black"
        app:layout_constraintDimensionRatio="148:20"

        app:layout_constraintEnd_toEndOf="@id/doctorName"
        app:layout_constraintStart_toStartOf="@id/doctorName"
        app:layout_constraintTop_toBottomOf="@id/doctorName"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintWidth_percent="0.48" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/infoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dark_blue_round_corner"
        android:elevation="4dp"
        android:fontFamily="@font/leaguespartan_regular"
        android:text="@string/info"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13dp"

        app:backgroundTint="@null"
        app:layout_constraintDimensionRatio="46:22"

        app:layout_constraintStart_toStartOf="@id/doctorName"
        app:layout_constraintTop_toBottomOf="@id/specification"
        app:layout_constraintWidth_percent="0.122" />


    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:background="@color/off_blue"
        android:elevation="2dp"

        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@id/infoButton"

        app:layout_constraintDimensionRatio="130:25"
        app:layout_constraintStart_toEndOf="@id/infoButton"
        app:layout_constraintTop_toTopOf="@id/infoButton"
        app:layout_constraintWidth_percent="0.35">

        <ImageButton
            android:id="@+id/calenderBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_button_doctor_white"
            android:padding="6dp"
            android:src="@drawable/calender_icon" />

        <ImageButton
            android:id="@+id/moreinfoBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_button_doctor_white"
            android:padding="6dp"
            android:src="@drawable/info_icon" />

        <ImageButton
            android:id="@+id/aboutwhatBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:background="@drawable/round_button_doctor_white"
            android:padding="6dp"
            android:src="@drawable/question_mark_icon" />

        <ImageButton
            android:id="@+id/favBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/round_button_doctor_white"
            android:padding="6dp"
            android:src="@drawable/fav_icon" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>