<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/text_black"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="17dp"

        android:backgroundTint="@color/off_blue"

        app:layout_constraintDimensionRatio="300:131"
        app:layout_constraintWidth_percent="0.833"
        app:layout_constraintVertical_bias="0.094"
        app:layout_constraintHorizontal_bias="0.5"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/doctor_img"
        android:scaleType="centerCrop"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"

        app:layout_constraintDimensionRatio="107:107"
        app:layout_constraintWidth_percent="0.270"

        app:layout_constraintVertical_bias="0.11"
        app:layout_constraintHorizontal_bias="0.16"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </com.google.android.material.imageview.ShapeableImageView>

    <TextView
        android:elevation="4dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/doctorname_sample"
        android:textSize="18dp"
        android:textColor="@color/button_blue"
        android:fontFamily="@font/leaguespartan_medium"


        app:layout_constraintDimensionRatio="100:24"
        app:layout_constraintWidth_percent="0.44"

        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.75"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/league_spartan_light"
        android:text="@string/doctor_sample_specification"

        app:layout_constraintDimensionRatio="148:20"
        app:layout_constraintWidth_percent="0.41"

        app:layout_constraintVertical_bias="0.157"
        app:layout_constraintHorizontal_bias="0.73"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/text_black"
        android:elevation="4dp"

        app:layout_constraintDimensionRatio="155:25"
        app:layout_constraintWidth_percent="0.302"

        app:layout_constraintVertical_bias="0.192"
        app:layout_constraintHorizontal_bias="0.73"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/star_icon"
            android:padding="8dp" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/star_icon"
            android:padding="8dp" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/star_icon"
            android:padding="8dp" />
        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="3dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/star_icon"
            android:padding="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>