<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardBackground"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="1dp"
        app:cardCornerRadius="17dp"
        android:backgroundTint="@color/off_blue"

        app:layout_constraintDimensionRatio="300:131"
        app:layout_constraintWidth_percent="0.9"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/doctorImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/doctor_img"
        android:scaleType="centerCrop"
        android:elevation="4dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"

        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.27"

        app:layout_constraintTop_toTopOf="@id/cardBackground"
        app:layout_constraintBottom_toBottomOf="@id/cardBackground"
        app:layout_constraintStart_toStartOf="@id/cardBackground"
        android:layout_marginStart="14dp" />


    <TextView

        android:id="@+id/doctorName"
        android:elevation="4dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/doctorname_sample"
        android:textSize="14dp"
        android:textColor="@color/button_blue"
        android:fontFamily="@font/leaguespartan_medium"
        android:gravity="center_vertical"

        app:layout_constraintDimensionRatio="100:24"
        app:layout_constraintWidth_percent="0.39"

        app:layout_constraintTop_toTopOf="@id/doctorImage"
        app:layout_constraintStart_toEndOf="@id/doctorImage"
        app:layout_constraintEnd_toEndOf="@id/cardBackground"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="16dp" />


    <TextView
        android:id="@+id/specification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="4dp"
        android:textColor="@color/text_black"
        android:fontFamily="@font/league_spartan_light"
        android:text="@string/doctor_sample_specification"
        android:gravity="center_vertical"

        app:layout_constraintDimensionRatio="148:20"
        app:layout_constraintWidth_percent="0.35"

        app:layout_constraintTop_toBottomOf="@id/doctorName"
        app:layout_constraintStart_toStartOf="@id/doctorName"
        app:layout_constraintEnd_toEndOf="@id/doctorName"
        android:layout_marginTop="4dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/infoButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:backgroundTint="@null"
        android:background="@drawable/dark_blue_round_corner"
        android:elevation="4dp"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:textAllCaps="false"
        android:text="@string/info"
        android:fontFamily="@font/leaguespartan_regular"

        app:layout_constraintDimensionRatio="46:22"
        app:layout_constraintWidth_percent="0.102"

        app:layout_constraintTop_toBottomOf="@id/specification"
        app:layout_constraintStart_toStartOf="@id/doctorName"
        android:layout_marginTop="8dp" />


    <LinearLayout
        android:id="@+id/actionButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:elevation="2dp"
        android:orientation="horizontal"
        android:background="@color/off_blue"

        app:layout_constraintDimensionRatio="150:25"
        app:layout_constraintWidth_percent="0.3"

        app:layout_constraintTop_toTopOf="@id/infoButton"
        app:layout_constraintBottom_toBottomOf="@id/infoButton"
        app:layout_constraintStart_toEndOf="@id/infoButton"
        android:layout_marginStart="8dp">

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/calender_icon"
            android:padding="6dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/info_icon"
            android:padding="6dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/question_mark_icon"
            android:padding="6dp" />

        <ImageButton
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/round_button_doctor_white"
            android:src="@drawable/fav_icon"
            android:padding="6dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>