<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="19dp">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="300:131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.833"
        app:cardCornerRadius="17dp"
        app:cardBackgroundColor="@color/off_blue"
        app:layout_constraintHorizontal_bias="0.5">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/off_blue">

            <ImageView
                android:id="@+id/ivDoctorPicCancelled"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/doctor_image_one"
                android:layout_marginTop="17dp"
                android:layout_marginStart="23dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintWidth_percent="0.17672"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="49dp" />

            <TextView
                android:id="@+id/tvDoctorNameCancelled"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintWidth_percent="0.472"
                app:layout_constraintDimensionRatio="170:20"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                android:autoSizeTextType="uniform"
                android:includeFontPadding="false"
                android:text="@string/dr_olivia_turner_m_d"
                android:layout_marginStart="15dp"
                android:layout_marginTop="37dp"
                android:textColor="@color/button_blue"
                android:fontFamily="@font/leaguespartan_semibold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/ivDoctorPicCancelled"
                tools:layout_editor_absoluteX="108dp"
                tools:layout_editor_absoluteY="37dp" />

            <TextView
                android:id="@+id/tvSpecializationCancelled"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintDimensionRatio="148:18"
                android:includeFontPadding="false"
                android:textColor="@color/black"
                android:gravity="center"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="20dp"
                app:layout_constraintTop_toBottomOf="@id/tvDoctorNameCancelled"
                android:layout_marginTop="0dp"
                app:layout_constraintStart_toEndOf="@+id/ivDoctorPicCancelled"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/leaguespartan_regular"
                app:layout_constraintWidth_percent="0.411"
                android:text="@string/dermato_Endocrinology"
                tools:layout_editor_absoluteX="125dp"
                tools:layout_editor_absoluteY="50dp" />

            <Button
                android:id="@+id/btnAddReview"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:layout_marginBottom="16dp"
                android:text="@string/add_Review"
                android:paddingBottom="1dp"
                android:paddingTop="0dp"
                android:textColor="@color/white"
                android:fontFamily="@font/leaguespartan_regular"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="15dp"
                android:autoSizeMaxTextSize="24dp"
                android:backgroundTint="@color/button_blue"
                android:layout_marginStart="23dp"
                android:layout_marginTop="22dp"
                app:layout_constraintTop_toBottomOf="@id/tvSpecializationCancelled"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteX="30dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>