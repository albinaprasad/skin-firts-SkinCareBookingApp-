<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/backgroundColor" /> <!-- Dark blue when selected -->
            <corners android:radius="13dp" /> <!-- Matches your XML -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/edittext_backgroundColor" /> <!-- Unselected color -->
            <corners android:radius="13dp" /> <!-- Matches your XML -->
        </shape>
    </item>
</selector>